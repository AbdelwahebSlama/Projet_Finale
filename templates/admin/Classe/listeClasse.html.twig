{% extends 'admin/indexadmin.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Classes</a>
        </li>
        <li class="breadcrumb-item active">Liste des Classes</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> La liste
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Niveau</th>
                        <th>Modifier</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Modifier</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for class in classe %}
                        <tr>

                            <td>{{ class.id }}</td>
                            <td>{{ class.nom }}</td>
                            <td>{{ class.niveau.nom }}</td>

                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <td><a href="{{ path('admin.modif.classe', {id: class.id}) }}">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                Modify
                                            </button>
                                        </a>
                                    </td>

                                </div>

                            </div>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    </div>


{% endblock %}