{% extends 'admin/indexadmin.html.twig' %}



{% block body %}

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Etudiant</a>
        </li>
        <li class="breadcrumb-item active">Liste des etudiants</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> La liste
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Specialité</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Specialité</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for et in etud %}
                        <tr>

                            <td>{{ et.id }}</td>
                            <td>{{ et.nom }}</td>
                            <td>{{ et.prenom }}</td>
                            <td>{{ et.etudiant }}</td>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <td><a href="{{ path('etudiant.detail', {id: et.id}) }}">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                                View
                                            </button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('etudiant.delete', {id: et.id}) }}">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">delete
                                            </button>
                                        </a>
                                    </td>
                                </div>

                            </div>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    </div>

{% endblock %}

